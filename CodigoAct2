public static void main(String[] args) {
        // TODO code application logic here
        Scanner entrada = new Scanner(System.in);
        System.out.println("Ingresa nombre: ");
        String nombre = entrada .nextLine();
        if (nombre.equalsIgnoreCase("Arturo")){
            System.out.println("Hola Arturo");
        } else if(nombre.equalsIgnoreCase("Ireri")){
            System.out.println("Hola Ireri");
        } else if (nombre.equalsIgnoreCase("Harry")){
            System.out.println("Hola Harry");
        } else if (nombre.equalsIgnoreCase("Owen")){
            System.out.println("Hola Owen");
        } else if (nombre.equalsIgnoreCase("Ana")){
            System.out.println("Hola Ana");
        } else if(nombre.isEmpty()){
            System.out.println("Error, campo vacio");
        }else{ 
              System.out.println("Nombre no encontrado");
        }
        
        
        //Numeros pares
        
        int[] numPar = new int[50];
        int num = 2;

       
        for (int i = 0; i < numPar.length; i++) {
            numPar[i] = num;
            num += 2;
        }


        System.out.println("Numeros pares");
        
        for (int n : numPar) {
            System.out.println(n);
        }
        entrada.close();
    }
